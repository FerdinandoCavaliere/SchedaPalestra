<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewNomeExport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/testoLaberNomeExport"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/Nero"
        android:textSize="@dimen/caratteri_dialog"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextNomeExport" />
    <EditText
        android:id="@+id/editTextNomeExport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        app:layout_constraintLeft_toRightOf="@+id/textViewNomeExport"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:textColor="@color/Nero"
        android:textSize="@dimen/caratteri_dialog" />

</android.support.constraint.ConstraintLayout>