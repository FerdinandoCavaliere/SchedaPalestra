<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_esercizio_list_item">

    <TextView
        android:id="@+id/textViewNomeFile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="File"
        android:textColor="@color/coloreSceltaTipoInserimento"
        android:textSize="@dimen/caratteri_listView_Gruppo"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textViewLabelDataCreazioneFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/testoLabelDataCreazioneFile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeFile"
        android:textColor="@color/coloreSceltaTipoInserimento"
        android:textSize="@dimen/caratteri_listView_Gruppo"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewDataCreazioneFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/coloreSceltaTipoInserimento"
        android:textSize="@dimen/caratteri_listView_Gruppo"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/textViewLabelDataCreazioneFile"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewLabelDataCreazioneFile"
        android:layout_marginStart="8dp" />
</android.support.constraint.ConstraintLayout>