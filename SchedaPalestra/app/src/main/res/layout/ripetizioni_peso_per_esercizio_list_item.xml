<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewRipetizioni"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="left|start"
            android:text="Ripetiz"
            android:textColor="@color/coloreAttributiListView"
            android:textSize="@dimen/caratteri_listView_Attributi" />
        <TextView
            android:id="@+id/textViewPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|end"
            android:paddingLeft="@dimen/dialog_horizontal_margin"
            android:text="Peso"
            android:textColor="@color/coloreAttributiListView"
            android:textSize="@dimen/caratteri_listView_Attributi" />
        <TextView
            android:id="@+id/textViewUnitaDiMisura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testoLabelPesoKg"
            android:textColor="@color/coloreAttributiListView"
            android:textSize="@dimen/caratteri_listView_Attributi"
            android:paddingLeft="@dimen/dialog_horizontal_margin_1"
            android:paddingStart="@dimen/dialog_horizontal_margin_1" />

        <TextView
            android:id="@+id/textViewRecPiramidale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_horizontal_margin_20"
            android:gravity="left|start"
            android:text="@string/testoLabelRecuperoMedio"
            android:textColor="@color/coloreAttributiListView"
            android:textSize="@dimen/caratteri_listView_Attributi"
            android:paddingStart="@dimen/dialog_horizontal_margin_11"
            android:paddingLeft="@dimen/dialog_horizontal_margin_11" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textViewRecuperoPiramidale"
            android:textSize="@dimen/caratteri_listView_Attributi"
            android:textColor="@color/coloreAttributiListView"
            android:paddingLeft="@dimen/dialog_horizontal_margin_2"
            android:paddingStart="@dimen/dialog_horizontal_margin_2" />
        <TextView
            android:id="@+id/textViewMinPiramidale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testoLabelTempoMin"
            android:textColor="@color/coloreAttributiListView"
            android:textSize="@dimen/caratteri_listView_Attributi"
            android:paddingLeft="@dimen/dialog_horizontal_margin_2"
            android:paddingStart="@dimen/dialog_horizontal_margin_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textViewPercentuale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dialog_horizontal_margin_62"
            android:paddingStart="@dimen/dialog_horizontal_margin_62"
            android:gravity="left|start"
            android:textColor="@color/coloreAttributiListView"
            android:textSize="@dimen/caratteri_listView_Attributi" />
        <TextView
            android:id="@+id/textViewPercentualeAbbreviato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testoLabelPesoPercentualeAbbreviato"
            android:textColor="@color/coloreAttributiListView"
            android:textSize="@dimen/caratteri_listView_Attributi"
            android:paddingLeft="@dimen/dialog_horizontal_margin_2"
            android:paddingStart="@dimen/dialog_horizontal_margin_2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dialog_horizontal_margin_5" >
        <TextView
            android:id="@+id/textViewRPELabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dialog_horizontal_margin_62"
            android:paddingStart="@dimen/dialog_horizontal_margin_62"
            android:text="@string/testoLabelPesoRPE"
            android:textColor="@color/coloreAttributiListView"
            android:textSize="@dimen/caratteri_listView_Attributi" />
        <TextView
            android:id="@+id/textViewRPE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/coloreAttributiListView"
            android:textSize="@dimen/caratteri_listView_Attributi"
            android:paddingLeft="@dimen/dialog_horizontal_margin_2"
            android:paddingStart="@dimen/dialog_horizontal_margin_2" />
    </LinearLayout>
</LinearLayout>
